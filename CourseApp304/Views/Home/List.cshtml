@model IEnumerable<CourseApp304.Models.Request>
@{
    ViewData["Title"] = "List";
}


<div class="m-5">
    <div class="bg-info text-white p-4">Liste</div>
    
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>@item.Message</td>

                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="AddRequest" class="btn btn-success">Create a Request</a>
    </div>
</div>
