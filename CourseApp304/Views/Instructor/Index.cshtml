@model IEnumerable<CourseApp304.Models.Instructor>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div class="m-4">
    <div class="bg-dark text-white text-center p-4">
        Instructor
    </div>
    @foreach (var item in Model)
    {
        <div class="bg-info text-white p-2 mt-3 text-center">
            @item.Name
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark btn-sm">Edit</a>
            <a asp-action="Create" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Create</a>

            <a asp-action="Change" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Change</a>
        </div>
        if (item.Courses == null || item.Courses.Count() == 0)
        {
            <div class="text-center p-2">No Courses</div>
        }
        else if (ViewBag.InstructorEditId == item.Id)
        {
            @Html.Partial("InstructorEdit", item)
        }
        else if (ViewBag.InstructorChangeId == item.Id)
        {
            @Html.Partial("InstructorChange", (item,Model))
        }
        else
        {
            @foreach (var course in item.Courses)
            {
                <div class="row mb-1">
                    <div class="col">@course.Name</div>
                    <div class="col">@course.Price</div>
                </div>
            }
            if (ViewBag.InstructorCreateId == item.Id)
            {
                @Html.Partial("InstructorCreate", item)
            }
        }
    }
</div>

